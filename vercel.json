{
  "version": 2,
  "functions": {
    "api/proxy.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 25
    }
  },
  "rewrites": [
    { "source": "/api/proxy", "destination": "/api/proxy" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization, Content-Type" }
      ]
    }
  ]
}
